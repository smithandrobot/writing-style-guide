.style-guide-table {
	border-collapse: inherit;
	background-color: gray;
	font-size: .875em;
	thead { border-bottom: 1px dashed #666666; }
	th {
		background-color: #333333;
		color:#FFF;
	}

	th, 
	tbody tr td {
		/*font-style: italic;*/
		background-color: #333333;
		color:#FFF;
		width: 50%;
		font-size: .85em;
		line-height: 1.2em;
		border-bottom: 1px dashed #666666;
	}
	table tbody tr {
		border-bottom: none;
	}

	td { }
	td:nth-child(2),
	th:nth-child(2) {
	    background-color: #3d3d3d;
	}
}

@media screen and (max-width: 600px) {
	.style-guide-table {
		table, tbody,
		tr, td, th {
			display: block;
			width: 100%;
		}
		thead { display: none; }
		
		tbody tr {
			border: none;
			border-bottom: none;
			margin-bottom: 0;
		}

		tbody tr td {
			width: 90%;
			padding: 5% !important;
		}

		tbody td div {
			display: inline-block;
			width: 80%;
			vertical-align: top;
		}

		tbody td:before {
			font-weight: bold;
			content: attr(data-header-text);
			display: block;
			float:left;
			position: static;
			top: 0;
			left: 0;
			width: 18%;
			padding: 0;
		}
	}
}