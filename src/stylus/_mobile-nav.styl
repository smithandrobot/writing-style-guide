.mobile-nav__toggle {
	position: relative;
	width: 40px;
	height: 40px;
	margin: 0 auto;
}
.mobile-nav__toggle i {
	position: relative;
	display: inline-block;
	width: 40px;
	height: 0;
	margin: 0 auto;
	border-bottom: 2px solid #fff;
	opacity: 1;
	-webkit-transition: border-bottom-color 0s linear 0.2s;
	

	&:before, &:after {
		content: '';
		position: absolute;
		top: 0;
		display: block;
		width: 40px;
		height: 0;
		border-bottom: 2px solid #fff;

		opacity: 1;
		-webkit-transform: rotateZ(0);
		transition: 
			top 0.2s linear,
			-webkit-transform 0.2s linear;
		transition-delay: 0.4s, 0;
	}

	&:before { top: 10px; }
	&:after { top: -10px; }

	.js-mobile-nav-open & {
		border-bottom-color: transparent;

		&:before, &:after {
			top: 0;
			transition-delay: 0, 0.4s;
		}
		&:before { -webkit-transform: rotateZ(-45deg); }
		&:after { -webkit-transform: rotateZ(45deg); }
	}
}

.mobile-nav__toggle img {
	position: absolute;
	top: -10px;
	left: 50%;
	margin-left: -12px;
	width: 24px;

	-webkit-transform: rotate(0);
	-webkit-transform-origin: 50% 30px;
	transition: -webkit-transform 0.4s linear;

	.js-mobile-nav-open & { -webkit-transform: rotate(180deg); }
}


.mobile-nav {
	background-color: #333333;
	margin-top: -25px;
	a { color: #FFF; }

	ul {
		margin-left: 0;
		padding-left: 0;
		margin-bottom: 0;
	}
	
	li { 
		text-align: center;
	}

	.mobile-nav__main {
		img {
			position: absolute;
			right: 0;
			top: 18px;
			cursor: pointer;

			-webkit-transform: scaleY(1);
			-moz-transform: scaleY(1);
			-ms-transform: scaleY(1);
			-o-transform: scaleY(1);
			transform: scaleY(1);
			-webkit-transition: -webkit-transform 0.2s linear;
			-moz-transition: -moz-transform 0.2s linear;
			-ms-transition: -ms-transform 0.2s linear;
			-o-transition: -o-transform 0.2s linear;
			transition: transform 0.2s linear;
		}
		.js-nav-open img {
			-webkit-transform: scaleY(-1);
			-moz-transform: scaleY(-1);
			-ms-transform: scaleY(-1);
			-o-transform: scaleY(-1);
			transform: scaleY(-1);
		}

		> li > a {
			font-size: 1.2em;
			font-style: italic;
		}

		> li {
			position: relative;
			border-bottom: 1px solid #767676;
			padding: 10px 45px; // padding for button
		}

		.mobile-nav__main__panel {
			display: none; // hidden by default	
			// transition: height 200ms ease-in-out;
			overflow: hidden;
			li {
				padding-top: 10px;
			}
		}
	}
}

.js-mobile-nav-open .mobile-nav__main { 
	display: block;
	height: auto;
}
