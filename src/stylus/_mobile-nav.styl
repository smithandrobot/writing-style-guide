.mobile-nav {
	background-color: #333333;
	margin-top: -25px;
	a { color: #FFF; }

	ul {
		margin-left: 0;
		padding-left: 0;
		margin-bottom: 0;
	}
	
	li { 
		text-align: center;
	}

	.mobile-nav__main {
		img {
			position: absolute;
			right: 0;
			top: 18px;
			cursor: pointer;
		}

		> li > a {
			font-size: 1.2em;
			font-style: italic;
		}

		> li {
			position: relative;
			border-bottom: 1px solid #767676;
			padding: 10px 45px; // padding for button
		}

		.mobile-nav__main__panel {
			display: none; // hidden by default	
			// transition: height 200ms ease-in-out;
			overflow: hidden;
			li {
				padding-top: 10px;
			}
		}
	}

}
